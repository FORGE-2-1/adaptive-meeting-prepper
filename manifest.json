{
  "manifest_version": 3,
  "name": "PrepPulse",
  "version": "1.0",
  "description": "AI-powered meeting prep",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "notifications",
    "identity",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/logo/image.png",
      "48": "/logo/image.png",
      "128": "/logo/image.png"
    },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content/gmail_scraper.js"]
    }
  ]
}
}
